<style>
.typing-cursor {
  animation: blink 0.7s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}
</style>

<script define:vars={{roles}}>
document.addEventListener('DOMContentLoaded', () => {
  const roleElement = document.getElementById('role-text');
  const cursor = roleElement.querySelector('.typing-cursor');

  function typeWriter(text, speed = 50) {
    return new Promise((resolve) => {
      let i = 0;
      function type() {
        if (i < text.length) {
          roleElement.insertBefore(document.createTextNode(text.charAt(i)), cursor);
          i++;
          setTimeout(type, speed);
        } else {
          resolve();
        }
      }
      type();
    });
  }

  function deleteText(speed = 50) {
    return new Promise((resolve) => {
      function remove() {
        const textNodes = Array.from(roleElement.childNodes).filter(node => node.nodeType === Node.TEXT_NODE);
        if (textNodes.length > 0) {
          roleElement.removeChild(textNodes[textNodes.length - 1]);
          setTimeout(remove, speed);
        } else {
          resolve();
        }
      }
      remove();
    });
  }

  async function cycleRoles() {
    await new Promise(resolve => setTimeout(resolve, 2000)); // Wait 2 seconds

    for (let role of roles) {
      await typeWriter(role);
      await new Promise(resolve => setTimeout(resolve, 1500)); // Pause at full text
      await deleteText();
    }

    // Final role with permanent display
    await typeWriter(roles[roles.length - 1]);
  }

  cycleRoles();
});
</script>
